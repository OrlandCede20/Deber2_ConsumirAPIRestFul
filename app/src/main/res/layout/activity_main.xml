<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EBEB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="21dp"
        android:text="Datos Consumidos"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/lbldatosJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="62dp"
        android:text="TextView"
        android:textColor="#021ED3"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="83dp" />

    <Switch
        android:id="@+id/swMostrarJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="33dp"
        android:checked="true"
        android:onClick="MostrarJson"
        android:text="Ver JSON"
        android:textColor="#228E26"
        android:textSize="16sp"
        android:thumbTint="#1EFB0E" />
</RelativeLayout>